pipeline {
    agent any
    
    environment {
        GITHUB_REPO_URL = 'https://github.com/morawaliyadda/farmfresh-server'
    }
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: "${env.GITHUB_REPO_URL}"
            }
        }
        
        stage('Build Docker Image') {
            steps {
                bat 'docker build -t onlinestore .'
            }
        }
        
        stage('Run Docker Image') {
            steps {
                bat 'docker run -d -p 3001:3001 onlinestore'
            }
        }
        
    }
}